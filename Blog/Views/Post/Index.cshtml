
@{
    Layout = null;
}

@model IList<Blog.Models.Post>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <td>Titulo</td>
                <td>Resumo</td>
                <td>Categoria</td>
                <td>Publicado</td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
            <tr>
                <td><a href="/Post/Visualiza/@p.Id">@p.Titulo</a></td>
                <td>@p.Resumo</td>
                <td>@p.Categoria</td>
                <td>
                    @if(p.Publicado)
                    {
                        @Html.Raw(string.Format("{0:dd/MM/yyyy}", p.DataPublicacao))
                    }
                    else
                    {
                        @Html.Raw("Não")
                    }
                </td>
                <td>
                    <a href="/post/removepost/@p.Id">Remover</a>
                    <a href="/post/publicapost/@p.Id">Publica</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
