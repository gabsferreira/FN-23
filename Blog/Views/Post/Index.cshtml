
@{
    Layout = null;
}

@model IList<Blog.Models.Post>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <td>Titulo</td>
                <td>Resumo</td>
                <td>Categoria</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td><a href="/Post/Visualiza/@p.Id">@p.Titulo</a></td>
                    <td>@p.Resumo</td>
                    <td>@p.Categoria</td>
                    <td><a href="/post/removepost/@p.Id">Remover</a> </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
